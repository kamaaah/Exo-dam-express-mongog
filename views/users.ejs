          <a style="float: right;"class="btn btn-danger" href="/deletePersonne/<%= person.id %>">Supprimer</a>                                     
          <a style="float: right;" class="btn btn-success" href="/editPersonne/<%= person.id %>">Edit</a>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
